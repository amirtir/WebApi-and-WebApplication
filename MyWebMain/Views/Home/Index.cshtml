@model List<Customer>
@{
    ViewData["Title"] = "Home Page";
}
<hr />

<h4> <a class="btn btn-danger bg-success"   href="/Home/Index"> Refresh</a> </h4>
<table class="table table-bordered table-hover">
    <tr class="success">
        <th>id</th>
        <th>Name</th>
        <th>Family</th>
        <th>Phone</th>
        <th>state</th>
        <th>#</th>
    </tr>
    @foreach (var item in Model)
    {

    <tr>
        <td>@item.CustomerId</td>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        <td>@item.Phone</td>
        <td>@item.State</td>
        <td>
            <a class="btn btn-primary"  href="/Home/UpdateCustomer/@item.CustomerId">Edit</a>
            <a class="btn btn-danger" href="/Home/DeleteCustomer/@item.CustomerId">Delete</a>
        </td>



    </tr>

    }




</table>
